import java.util.Scanner;

public class Taeho0920 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int sum = 0;
		System.out.println("숫자를 입력해주세요");
		int a = sc.nextInt();
		for(int i = 1; i <= a;i++) {
			 if(i%2==0) {
				 sum = sum + i;
				 
			 }
			 
		}
		System.out.println(sum);
    }
	

}
